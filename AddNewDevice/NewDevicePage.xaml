<Page x:Class="Sim_Wheel_Config.AddNewDevice.NewDevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sim_Wheel_Config.AddNewDevice"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="NewDevicePage">

    <Grid>
        <Label Content="Create New Device" Foreground="White"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="307,30,0,0" FontSize="20"/>
        <Border BorderBrush="White" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="312,61,0,0" Width="167" Height="2"/>
        <Button x:Name="AddRGBStripDeviceButton"  Content="Add RGB Strip Device" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,0,93,0" Height="200" Width="250" Background="#FF292929" Foreground="White" Click="AddRGBStripDeviceButton_Click"/>
        <Button x:Name="AddWheelDeviceButton"  Content="Add Wheel Device" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="650,0,93,0" Height="200" Width="250" Background="#FF292929" Foreground="White" Click="AddWheelDeviceButton_Click" />
    </Grid>
</Page>
