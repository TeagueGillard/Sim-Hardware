<Page x:Class="Sim_Wheel_Config.AddNewDevice.NewTGU1Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sim_Wheel_Config.AddNewDevice"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="NewTGU1Page">

    <Grid>
        <Label Content="Create New TG - U1 Device" Foreground="White"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="307,30,0,0" FontSize="20"/>
        <Border BorderBrush="White" BorderThickness="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="312,61,0,0" Width="240" Height="2"/>

        <Label Content="Device Name:" Foreground="White"  HorizontalAlignment="Left" Margin="337,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TGU1DeviceNameTextBox"  HorizontalAlignment="Left" Margin="425,96,0,0" TextWrapping="NoWrap" Text="Device Name" VerticalAlignment="Top" Width="200" Background="#00000000" Foreground="White"/>
        
        <Label Content="VID:" Foreground="White"  HorizontalAlignment="Left" Margin="630,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TGU1VIDTextBox"  HorizontalAlignment="Left" Margin="667,96,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="50" Background="#00000000" Foreground="White"/>
        
        <Label Content="PID:" Foreground="White"  HorizontalAlignment="Left" Margin="722,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TGU1PIDTextBox"  HorizontalAlignment="Left" Margin="758,96,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="50" Background="#00000000" Foreground="White"/>
        
        <Label Content="LED Count:" Foreground="White"  HorizontalAlignment="Left" Margin="813,92,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TGU1LEDCountTextBox"  HorizontalAlignment="Left" Margin="886,96,0,0" TextWrapping="NoWrap" Text="0" VerticalAlignment="Top" Width="50" Background="#00000000" Foreground="White" PreviewTextInput="TGU1LEDCountTextBox_PreviewTextInput"/>
        

        <Label Content="LED Strip 1:" Foreground="White"  HorizontalAlignment="Left" Margin="337,120,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="TGU1LED1CheckBox" HorizontalAlignment="Left" Margin="425,125,0,0" VerticalAlignment="Top" />

        <Label Content="LED Strip 2:" Foreground="White"  HorizontalAlignment="Left" Margin="480,120,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="TGU1LED2CheckBox" HorizontalAlignment="Left" Margin="565,125,0,0" VerticalAlignment="Top"/>

        <Label Content="LED Strip 3:" Foreground="White"  HorizontalAlignment="Left" Margin="620,120,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="TGU1LED3CheckBox" HorizontalAlignment="Left" Margin="705,125,0,0" VerticalAlignment="Top"/>

        <Label Content="LED Strip 4:" Foreground="White"  HorizontalAlignment="Left" Margin="760,119,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="TGU1LED4CheckBox" HorizontalAlignment="Left" Margin="845,125,0,0" VerticalAlignment="Top"/>

        <Label Content="Input Device:" Foreground="White"  HorizontalAlignment="Left" Margin="337,148,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="TGU1InputDeviceComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="425,150,0,0" Width="200" Background="#FF090910" Foreground="Black" ></ComboBox>


        <Button x:Name="AddTGU1DeviceButton"  Content="Add TG - U1 Device" HorizontalAlignment="Left" Margin="806,160,0,0" VerticalAlignment="Top" Width="130" Click="AddTGU1DeviceButton_Click"/>

    </Grid>
</Page>
